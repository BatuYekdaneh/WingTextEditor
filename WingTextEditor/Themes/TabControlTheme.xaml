<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="RadioButton" x:Key="RadioButtonTheme">
        <Setter Property="Height" Value="30"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="IsChecked" Value="{Binding IsSelected, RelativeSource={RelativeSource TemplatedParent}}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Content" Value="{Binding Header, RelativeSource={RelativeSource TemplatedParent}}"/>
        <Setter Property="GroupName" Value="TabControl"/>
        <Setter Property="Margin" Value="-12,1,10,1"/>
    </Style>


   
</ResourceDictionary>